{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./*.ts",
  ],
  "exclude": ["**/dist/**", "node_modules"]
}
